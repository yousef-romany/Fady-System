    <script>
      let sureMassage = [];
      function notificationAlertMassage() {
        fetch("/notificationAlert")
          .then((res) => res.json())
          .then((resData) => {
            console.log(resData);
            resData[0].forEach((item) => {
              sureMassage.push([
                item.AMOUNTMATRAIL,
                item.limitNotification,
                item.NAMEMATRAIL,
                item.IDMATRAIL,
              ]);
            });
            resData[1].forEach((item) => {
              sureMassage.push([item.ID, item.tel]);
            });
          })
          .catch((err) => console.log("error in database"));
        setTimeout(() => {
          document.querySelector(".indicator").innerHTML += sureMassage.length;
          sureMassage.forEach((item) => {
            if (item.length === 2) {
              let newELement = `
            <a href="/order-page" class="list-group-item">
              <div class="row g-0 align-items-center">
                <div class="col-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-bell text-warning"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path><path d="M13.73 21a2 2 0 0 1-3.46 0"></path></svg>
                </div>
                <div class="col-10">
                  <div class="text-dark massage">طلبات</div>
                  <div class="text-muted small mt-1 massage" style="font-size: 16px;text-align: center;">
                     يجب أخذ فلوس من ${item[0]} و الرقم الهاتف ${item[1]}
                  </div>
                </div>
              </div>
            </a>
          `;
              document.querySelector(".list-group").innerHTML += newELement;
            } else {
              let newELement = `
            <a href="/Storage" class="list-group-item">
              <div class="row g-0 align-items-center">
                <div class="col-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-alert-circle text-danger"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="8" x2="12" y2="12"></line><line x1="12" y1="16" x2="12.01" y2="16"></line></svg>
                </div>
                <div class="col-10">
                  <div class="text-dark massage">مواد الخام</div>
                  <div class="text-muted small mt-1 massage" style="font-size: 16px;text-align: center;">
                    أحذر ماده الخام  ${item[2]}   قاربت على النفاذ
                  </div>
                </div>
              </div>
            </a>
          `;
              document.querySelector(".list-group").innerHTML += newELement;
            }
          });
        }, 100);
      }
