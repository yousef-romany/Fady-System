      }
      .contianerLoad {
        width: 40%;
        height: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .line {
        border: 16px solid #f3f3f3; /* Light grey */
        border-top: 16px solid #222e3c; /* Blue */
        border-radius: 100%;
        height: 200px;
        width: 200px;
        animation: spin 2s linear infinite;
      }
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
